    <!--// Background // -->
    <Border Height="600"
                Width="750"
                CornerRadius="25"
                Background="#524E4F">
        <Border.Effect>
            <DropShadowEffect Color="#000000"
                                  Opacity="0.5"
                                  Direction="90"
                                  ShadowDepth="2"
                                  BlurRadius="35"/>
        </Border.Effect>
        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition Height="23*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <!--// Menu border // -->
            <Border Height="40"
                Width="650"
                Background="#363435"
                BorderBrush="#363435"
                BorderThickness="3"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                Margin="10,0,0,0"
                CornerRadius="5" Grid.Column="1"/>

            <!--// Menu // -->
            <Menu Height="30"
              Width="630"
              Background="#363435"
              VerticalAlignment="Center"
              HorizontalAlignment="Left"
              Margin="20,0,0,0" Grid.Column="1">

                <!--// File // -->
                <MenuItem Header="File"
                      Height="30"
                      Width="108"
                      Style="{StaticResource File_MenuItem_With_Dropdown}">

                    <MenuItem Header="Open"
                      Height="35"
                      Width="108"
                      Style="{StaticResource File_Sub_MenuItem}"
                      Click="Open_Click">
                    </MenuItem>

                    <MenuItem Header="Save"
                      Height="35"
                      Width="108"
                      Style="{StaticResource File_Sub_MenuItem}"
                      Click="Save_Click">
                    </MenuItem>

                </MenuItem>

                <!--// Edit // -->
                <MenuItem Header="Edit"
                      Height="30"
                      Width="185"
                      Style="{StaticResource Edit_MenuItem_With_Dropdown}"
                      Margin="25,0,0,0">

                    <MenuItem Header="End algorithm"
                      Height="35"
                      Width="175"
                      Style="{StaticResource Edit_Sub_MenuItem}"
                      Click="EndAlgorithm_Click">
                    </MenuItem>

                    <MenuItem Header="Delete selection"
                      Height="35"
                      Width="185"
                      Style="{StaticResource Edit_Sub_MenuItem}"
                      Click="DeleteSection_Click"   >
                    </MenuItem>

                </MenuItem>

                <!--// Apply graph algorithm // -->
